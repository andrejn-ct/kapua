 <databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
  logicalFilePath="KapuaDB/changelog-eventlog-1.0.0.xml">

    <include relativeToChangelogFile="true" file="../common-properties.xml" />

    <changeSet id="changelog-eventlog-1.0.0_createTable" author="eurotech">
        <!-- Old SQL file
        <sqlFile relativeToChangelogFile="true" path="./user.sql" />
        -->
        <createTable tableName="evt_eventlog">
            <column name="scope_id" type="bigint(21) unsigned">
                <constraints nullable="false" />
            </column>
            <column name="id" type="bigint(21) unsigned">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created_on" type="timestamp(3)" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="bigint(21) unsigned">
                <constraints nullable="false"/>
            </column>

            <column name="source_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_scope_id" type="bigint(21) unsigned">
                <constraints nullable="false" />
            </column>
            <column name="entity_id" type="bigint(21) unsigned">
                <constraints nullable="false" />
            </column>
            <column name="context_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_operation" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="event_sent_on" type="timestamp(3)" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>

            <column name="optlock" type="int unsigned" />
            <column name="attributes" type="text" />
            <column name="properties" type="text" />
        </createTable>

        <sql dbms="h2">ALTER TABLE evt_eventlog ADD CHECK scope_id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE evt_eventlog ADD CHECK id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE evt_eventlog ADD CHECK entity_scope_id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE evt_eventlog ADD CHECK entity_id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE evt_eventlog ADD CHECK created_by >= 0;</sql>

        <createIndex tableName="evt_eventlog" indexName="idx_eventlog_scope_id">
            <column name="scope_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="evt_eventlog"/>
        </rollback>
    </changeSet>

</databaseChangeLog>