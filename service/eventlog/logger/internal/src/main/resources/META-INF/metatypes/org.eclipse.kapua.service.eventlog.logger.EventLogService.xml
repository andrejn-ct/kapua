<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kapua.service.eventlog.logger.EventLogService"
         name="EventLogService" 
         description="This is the configuration for the kapua EventLogService. ">

        <Icon resource="OSGI-INF/user-service.png" size="32"/>

        <AD id="eventLoggingEnabled"
            name="eventLoggingEnabled"
            type="Boolean"
            cardinality="0"
            required="false"
            default="true"
            description="Whether to log service events.">
        </AD>

        <AD id="eventLogTimeToLive"
            name="eventLogTimeToLive"
            type="Integer"
            cardinality="0"
            required="false"
            default="7"
            min="1"
            description="Event log entry lifetime in days.">
        </AD>

        <AD id="deletionBatchSize"
            name="deletionBatchSize"
            type="Integer"
            cardinality="0"
            required="false"
            default="1000"
            min="1"
            description="The number of events to be deleted in one batch.">
        </AD>
    </OCD>

    <Designate pid="org.eclipse.kapua.service.eventlog.logger.EventLogService">
        <Object ocdref="org.eclipse.kapua.service.eventlog.logger.EventLogService"/>
    </Designate>
</MetaData>
