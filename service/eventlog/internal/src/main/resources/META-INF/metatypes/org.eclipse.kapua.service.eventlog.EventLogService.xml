<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kapua.service.eventlog.EventLogService"
         name="EventLogService" 
         description="This is the configuration for the kapua EventLogService. ">

        <Icon resource="OSGI-INF/user-service.png" size="32"/>

        <AD id="infiniteChildEntities"
            name="infiniteLogEntries"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="Whether to allow infinite log entries for this account.">
        </AD>

        <AD id="maxNumberChildEntities"
            name="maxNumberLogEntries"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            min="0"
            description="Maximum number of log entries that are allowed to be created for this account.">
        </AD>

    </OCD>

    <Designate pid="org.eclipse.kapua.service.eventlog.EventLogService">
        <Object ocdref="org.eclipse.kapua.service.eventlog.EventLogService"/>
    </Designate>
</MetaData>
